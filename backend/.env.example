# =================================
# FACE2FACE - Environment Variables
# =================================

NODE_ENV=development
PORT=3000

# MongoDB (Required)
MONGODB_URI=mongodb://localhost:27017/faceface_db

# Session Secret (Required) - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_super_secret_session_key_change_this

# Auth0 (Optional - for Google Login)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_CALLBACK_URL=http://localhost:3000/auth/callback

# Email Service (Optional)
# Options: gmail, sendgrid, or leave empty for development mode
EMAIL_SERVICE=
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=Face2Face <noreply@faceface.app>
SENDGRID_API_KEY=your_sendgrid_key

# Base URL
BASE_URL=http://localhost:3000
